datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  name     String?
}

model Post {
  id           Int      @id @default(autoincrement())
  title        String
  content      String
  category     String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  slug         String   @unique
}
